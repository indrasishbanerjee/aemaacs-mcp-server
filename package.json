{
  "name": "aemaacs-mcp-servers",
  "version": "1.0.0",
  "description": "AEMaaCS MCP Servers - Read and Write operations for Adobe Experience Manager as a Cloud Service",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspaces",
    "test:all": "node scripts/test-all.js",
    "test:integration": "jest tests/integration --testTimeout=10000",
    "test:e2e": "jest tests/e2e --testTimeout=15000",
    "type-check": "tsc --noEmit --project packages/shared/tsconfig.json && tsc --noEmit --project packages/read-server/tsconfig.json && tsc --noEmit --project packages/write-server/tsconfig.json",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "format": "prettier --write packages/*/src/**/*.ts",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.5.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  }
}
